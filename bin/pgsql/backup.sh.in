TOPDIR="@abs_top_srcdir@"
export DATABASE="pgsql"
if [ -f "${HOME}/.dbt2_profile" ]; then
	source ${HOME}/.dbt2_profile || exit 1
else
	source ${TOPDIR}/bin/dbt2_profile || exit 1
fi

while getopts "o:" opt; do
	case $opt in
	o)
		OUTPUT=$OPTARG
		;;
	esac
done

if [ "$OUTPUT" == "" ]; then
	echo "use -o and specify the backup file"
	exit 1;
fi

_test=`pg_dump $DBNAME --file=$OUTPUT | grep OK`
if [ "$_test" != "" ]; then
	echo "backup failed: $_test"
	exit 1
fi

exit 0
