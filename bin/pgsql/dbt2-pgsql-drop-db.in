TOPDIR="@abs_top_srcdir@"
export DATABASE="pgsql"
if [ -f "${HOME}/.dbt2_profile" ]; then
	source ${HOME}/.dbt2_profile || exit 1
else
	source ${TOPDIR}/bin/dbt2_profile || exit 1
fi

# Double check we have a value for PGDATA
if [ -z ${PGDATA} ] ; then
	echo "PGDATA environment variable is unset"
	exit 1
fi

while getopts "l:" OPT; do
	case ${OPT} in
	l)
		PORT=${OPTARG}
		;;
	esac
done

${DROPDB} -p ${PORT} ${DBNAME} || exit 1

exit 0
