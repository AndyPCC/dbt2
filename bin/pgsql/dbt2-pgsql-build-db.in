TOPDIR="@abs_top_srcdir@"
export DATABASE="pgsql"
source ${TOPDIR}/bin/dbt2_profile || exit 1

DIR=`dirname ${0}`

usage()
{
    echo "Usage:"
    echo "    dbt2-pgsql-build-db [options]"
    echo "    dbt2-pgsql-build-db -h"
    echo "Options:"
    echo "    -b"
    echo "        Load tables and create indexes in parallel."
    echo "    -d <path>"
    echo "        Location of raw database files to load."
    echo "    -g"
    echo "        Generate raw database files."
    echo "    -p <database_parameters>"
    echo "        PostgreSQL database parameters."
    echo "    -r"
    echo "        Drop existing database before building a new database"
    echo "    -t"
    echo "        Use tablespaces."
    echo "    -w <scale factor>"
    echo "        Number of warehouses to build. Default 1."
}

WAREHOUSES=1
GENERATE_DATAFILE=0
REBUILD_DB=0
while getopts "bd:ghp:rtw:" OPT; do
	case ${OPT} in
	b)
		BACKGROUND_FLAG="-b"
		;;
	d)
		DBDATA=${OPTARG}
		;;
	g)
		GENERATE_DATAFILE=1
		;;
	h)
		usage
		exit 0
		;;
	p)
		PARAMETERS=$OPTARG
		;;
	r)
		REBUILD_DB=1
		;;
	t)
		TABLESPACES_FLAG="-t"
		;;
	w)
		WAREHOUSES=${OPTARG}
		;;
	esac
done

if [ ${GENERATE_DATAFILE} -eq 1 ]; then
	${TOPDIR}/src/dbt2-datagen -d ${DBDATA} -w ${WAREHOUSES} --pgsql || exit 1
fi

if [ ${REBUILD_DB} -eq 1 ]; then
	echo "Restart the database to reset database parameters."
	${DIR}/dbt2-pgsql-stop-db
	${DIR}/dbt2-pgsql-start-db -p "${PARAMETERS}" || exit 1
	${DIR}/dbt2-pgsql-drop-db
fi

${DIR}/dbt2-pgsql-create-db || exit 1
${DIR}/dbt2-pgsql-create-tables ${TABLESPACES_FLAG} || exit 1
${DIR}/dbt2-pgsql-load-db -d ${DBDATA} ${BACKGROUND_FLAG} \
		${TABLESPACES_FLAG} || exit 1

exit 0
